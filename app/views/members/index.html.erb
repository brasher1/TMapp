<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table border="4px" bordercolorlight="green" bordercolorlight="blue">
  <thead>
    <tr bgcolor="yellow">
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address1</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr bgcolor="lightpink">
        <td><%= member.firstname %></td>
        <td><%= member.lastname %></td>
        <td><%= member.address1 %></td>
        <td><%= button_to 'Show', member, :method => :get %></td>
        <td><%= button_to 'Edit', edit_member_path(member), :method => :get %></td>
        <td><%= button_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

